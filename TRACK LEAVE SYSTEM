<script src="https://www.gstatic.com/firebasejs/8.10.1/firebase-app.js"></script>
<script src="https://www.gstatic.com/firebasejs/8.10.1/firebase-auth.js"></script>
<script src="https://www.gstatic.com/firebasejs/8.10.1/firebase-database.js"></script>

<script>
    // CONFIG
    const firebaseConfig = {
      apiKey: "AIzaSyDF0Ev057M5N_mF5FiEzLfBgu2lHRNRDCk",
      authDomain: "leavemanagement-ghapt.firebaseapp.com",
      databaseURL: "https://leavemanagement-ghapt-default-rtdb.firebaseio.com",
      projectId: "leavemanagement-ghapt",
      storageBucket: "leavemanagement-ghapt.firebasestorage.app",
      messagingSenderId: "172713644139",
      appId: "1:172713644139:web:f42d8c9a1a141ad1c1e12e"
    };
    
    firebase.initializeApp(firebaseConfig);
    const auth = firebase.auth();
    const dbRef = firebase.database().ref('leave_records');

    // --- AUTH STATE ---
    let isRegisterMode = false;

    auth.onAuthStateChanged((user) => {
        if (user) {
            document.getElementById('auth-container').style.display = 'none';
            const app = document.getElementById('app-container');
            app.style.display = 'block';
            setTimeout(() => app.style.opacity = 1, 100);
            document.getElementById('statusDot').classList.add('online');
            initApp();
        } else {
            document.getElementById('auth-container').style.display = 'flex';
            const app = document.getElementById('app-container');
            app.style.opacity = 0;
            setTimeout(() => app.style.display = 'none', 500);
        }
    });

    function toggleAuthMode() {
        isRegisterMode = !isRegisterMode;
        const title = document.getElementById('authTitle');
        const btn = document.getElementById('authBtn');
        const subtitle = document.getElementById('authSubtitle');
        const toggle = document.querySelector('.switch-auth');

        if(isRegisterMode) {
            title.innerText = "Register";
            btn.innerText = "Create Account";
            subtitle.innerText = "Setup your access";
            toggle.innerText = "Already have an account? Login";
        } else {
            title.innerText = "Login";
            btn.innerText = "Login";
            subtitle.innerText = "Access your Leave Data";
            toggle.innerText = "Don't have an account? Register";
        }
        document.getElementById('auth-error').innerText = "";
    }

    function handleAuth() {
        const email = get("email").value;
        const pass = get("password").value;
        const errorEl = document.getElementById('auth-error');

        if(!email || !pass) {
            errorEl.innerText = "Please enter email and password.";
            return;
        }

        if(isRegisterMode) {
            auth.createUserWithEmailAndPassword(email, pass)
            .then(() => showToast("Account Created!"))
            .catch(e => errorEl.innerText = e.message);
        } else {
            auth.signInWithEmailAndPassword(email, pass)
            .catch(e => errorEl.innerText = e.message);
        }
    }

    function handleLogout() {
        if(confirm("Logout?")) auth.signOut();
    }

    // --- APP LOGIC ---
    let allRecords = {}; 
    let currentEditKey = null;
    let isDescending = true; 
    let lastDeletedRecord = null;
    let isViewingAllHistory = false; // Default to Month view for performance
    let currentListener = null; // To detach Firebase listeners

    function initApp() {
        if(localStorage.getItem('darkMode') === 'true') document.body.classList.add('dark-mode');
        get("submitted").valueAsDate = new Date();
        
        // Default load: Current Month Only (Optimization)
        loadDataByMonth();
    }

    // --- DATA LOADING OPTIMIZATION ---
    function toggleDataView() {
        isViewingAllHistory = !isViewingAllHistory;
        const btn = document.getElementById('viewToggleBtn');
        if(isViewingAllHistory) {
            btn.innerText = "üìÖ View: All History";
            btn.style.color = "var(--danger)";
            btn.style.borderColor = "var(--danger)";
            showToast("Loading all history...");
            loadAllData();
        } else {
            btn.innerText = "üìÖ View: Month";
            btn.style.color = "";
            btn.style.borderColor = "";
            showToast("Loading current month...");
            loadDataByMonth();
        }
    }

    function loadDataByMonth() {
        if(currentListener) dbRef.off(); // Stop previous listeners
        
        // Get Current Month string (e.g., "2023-10")
        const now = new Date();
        const yearMonth = now.toISOString().slice(0, 7); 
        
        // Query only records matching this month
        // NOTE: This requires 'yearMonth' to be indexed in Firebase Rules
        currentListener = dbRef.orderByChild('yearMonth').equalTo(yearMonth).on('value', (snapshot) => {
            allRecords = snapshot.val() ? snapshot.val() : {};
            renderTable();
        });
    }

    function loadAllData() {
        if(currentListener) dbRef.off();
        
        // Load all data ordered by timestamp
        currentListener = dbRef.orderByChild('timestamp').on('value', (snapshot) => {
            allRecords = snapshot.val() ? snapshot.val() : {};
            renderTable();
        });
    }

    // --- MODAL & UI ---
    function openModal(isEdit = false) {
        const modal = document.getElementById('entryModal');
        const title = document.getElementById('modalTitle');
        const saveText = document.getElementById('saveText');
        
        modal.classList.add('show');
        
        if(!isEdit) {
            title.innerText = "Add New Leave Record";
            saveText.innerText = "üíæ Save Record";
            clearForm();
            get("submitted").valueAsDate = new Date();
        } else {
            title.innerText = "Edit Leave Record";
            saveText.innerText = "üîÑ Update Record";
        }
    }

    function closeModal() {
        document.getElementById('entryModal').classList.remove('show');
        setTimeout(() => { currentEditKey = null; clearForm(); }, 300);
    }
    window.onclick = function(event) {
        if (event.target == document.getElementById('entryModal')) closeModal();
    }
    function toggleDarkMode() {
        document.body.classList.toggle('dark-mode');
        localStorage.setItem('darkMode', document.body.classList.contains('dark-mode'));
    }
    function undoDelete() {
        if(!lastDeletedRecord) return;
        dbRef.push(lastDeletedRecord);
        lastDeletedRecord = null;
        document.getElementById('undoBtn').style.display = 'none';
        showToast("Record restored!");
    }
    function toggleSort() {
        isDescending = !isDescending;
        get('sortBtn').innerText = isDescending ? 'Sort: New ‚Üì' : 'Sort: Old ‚Üë';
        renderTable();
    }
    function clearFilters() {
        get('filterStart').value = '';
        get('filterEnd').value = '';
        renderTable();
    }

    // --- SAVE (With YearMonth Optimization) ---
    function saveData() {
        let name = get("name").value.trim();
        let section = get("section").value.trim();
        let type = get("type").value;
        let from = get("from").value;
        let to = get("to").value;
        let submitted = get("submitted").value;

        if (!name || !from || !to || !submitted) {
            showToast("Please fill all required fields.");
            return;
        }

        let fromISO = parseCustomDate(from);
        let toISO = parseCustomDate(to);
        if (new Date(fromISO) > new Date(toISO)) {
            showToast("'From' date cannot be after 'To' date.");
            return;
        }

        // PERFORMANCE: Calculate Year-Month for database indexing
        let yearMonth = fromISO.slice(0, 7); 

        let record = { name, section, type, from: fromISO, to: toISO, submitted: submitted, timestamp: Date.now(), yearMonth };

        if (currentEditKey) {
            dbRef.child(currentEditKey).update(record);
            showToast("Updated Successfully!");
        } else {
            dbRef.push(record);
            showToast("Saved to Cloud!");
        }
        closeModal();
    }

    function renderTable() {
        let search = get("search").value.toLowerCase();
        let filterStart = get("filterStart").value;
        let filterEnd = get("filterEnd").value;
        
        let tbody = get("tableBody");
        tbody.innerHTML = "";
        let totalEntries = Object.keys(allRecords).length;
        document.getElementById('recordCount').innerText = totalEntries;

        if (totalEntries === 0) {
            tbody.innerHTML = `<tr><td colspan="9" style="text-align:center; color:var(--text-muted); padding:40px;">No records found. Click "+ New Entry" to add one.</td></tr>`;
            return;
        }

        let count = 0;
        let recordsArray = Object.keys(allRecords).map(key => { return { key: key, ...allRecords[key] }; });
        
        if (isDescending) recordsArray.reverse();

        recordsArray.forEach(item => {
            let r = item; let key = item.key;

            if (!r.name.toLowerCase().includes(search)) return;
            if (filterStart && new Date(r.from) < new Date(filterStart)) return;
            if (filterEnd && new Date(r.from) > new Date(filterEnd)) return;

            let row = tbody.insertRow(-1);
            let badgeClass = r.type === "Full Day" ? "badge-full" : "badge-half";
            const safeName = escapeHtml(r.name);
            const safeSection = escapeHtml(r.section || '-');
            
            row.innerHTML = `
                <td><strong>${count + 1}</strong></td>
                <td><strong>${safeName}</strong></td>
                <td>${safeSection}</td>
                <td><span class="badge ${badgeClass}">${r.type}</span></td>
                <td>${formatDateDisplay(r.from)}</td>
                <td>${formatDateDisplay(r.to)}</td>
                <td>${formatDateDisplay(r.submitted)}</td>
                <td style="text-align: right;">
                    <button class="action-btn btn-edit" onclick="editData('${key}')">Edit</button>
                    <button class="action-btn btn-del" onclick="deleteData('${key}')">Del</button>
                </td>
            `;
            count++;
        });

        if(count === 0) {
            tbody.innerHTML = `<tr><td colspan="9" style="text-align:center; color:var(--text-muted); padding:30px;">No matching records found.</td></tr>`;
        }
    }

    function escapeHtml(text) {
        if (!text) return text;
        return text.replace(/&/g, "&amp;").replace(/</g, "&lt;").replace(/>/g, "&gt;").replace(/"/g, "&quot;").replace(/'/g, "&#039;");
    }

    function editData(key) {
        let r = allRecords[key];
        get("name").value = r.name;
        get("section").value = r.section;
        get("type").value = r.type;
        get("from").value = reverseParseDate(r.from);
        get("to").value = reverseParseDate(r.to);
        get("submitted").value = r.submitted;
        currentEditKey = key;
        openModal(true); 
    }

    function deleteData(key) {
        if(!confirm("Delete this record?")) return;
        lastDeletedRecord = allRecords[key];
        document.getElementById('undoBtn').style.display = 'inline-flex';
        dbRef.child(key).remove();
        showToast("Deleted.");
        if(currentEditKey === key) closeModal();
    }

    function downloadExcel() {
        if(Object.keys(allRecords).length === 0) { showToast("No data to export."); return; }
        let csvContent = "data:text/csv;charset=utf-8,";
        csvContent += "S.No,Name,Section,Type,From,To,Date Submitted\n";
        let recordsArray = Object.values(allRecords);
        if(isDescending) recordsArray.reverse();
        recordsArray.forEach((r, index) => {
            let row = `"${index + 1}","${r.name}","${r.section}","${r.type}","${r.from}","${r.to}","${r.submitted}"`;
            csvContent += row + "\n";
        });
        let encodedUri = encodeURI(csvContent);
        let link = document.createElement("a");
        link.setAttribute("href", encodedUri);
        link.setAttribute("download", `Leave_Report_${new Date().toISOString().slice(0,10)}.csv`);
        document.body.appendChild(link);
        link.click();
        document.body.removeChild(link);
    }

    function triggerImport() { document.getElementById('csvFile').click(); }

    function processImport(input) {
        let file = input.files[0];
        if(!file) return;
        let reader = new FileReader();
        reader.onload = function(e) {
            let text = e.target.result;
            let lines = text.split('\n');
            if(lines[0].toLowerCase().includes("name")) lines.shift();
            let count = 0;
            lines.forEach(line => {
                if(line.trim() === "") return;
                let cols = line.split(',');
                if(cols.length >= 7) {
                    let name = cols[1].replace(/"/g, '').trim();
                    let section = cols[2].replace(/"/g, '').trim();
                    let type = cols[3].replace(/"/g, '').trim();
                    let from = cols[4].replace(/"/g, '').trim();
                    let to = cols[5].replace(/"/g, '').trim();
                    let submitted = cols[6].replace(/"/g, '').trim();
                    if(name && from) {
                        let fromISO = parseDateFromCSV(from);
                        let toISO = parseDateFromCSV(to);
                        let subISO = parseDateFromCSV(submitted);
                        if(fromISO && toISO) {
                            let yearMonth = fromISO.slice(0, 7);
                            let record = { name, section, type, from: fromISO, to: toISO, submitted: subISO, timestamp: Date.now(), yearMonth };
                            dbRef.push(record);
                            count++;
                        }
                    }
                }
            });
            showToast(`Imported ${count} records!`);
            input.value = ""; 
        };
        reader.readAsText(file);
    }

    function parseDateFromCSV(dateStr) {
        if(!dateStr) return null;
        if (dateStr.match(/^\d{4}-\d{2}-\d{2}$/)) return dateStr;
        let date = new Date(dateStr);
        if(isNaN(date)) return null; 
        let year = date.getFullYear();
        let month = String(date.getMonth() + 1).padStart(2, '0');
        let day = String(date.getDate()).padStart(2, '0');
        return `${year}-${month}-${day}`;
    }

    function clearForm() {
        get("name").value = ""; 
        get("section").value = ""; 
        get("type").value = "Full Day";
        get("from").value = ""; 
        get("to").value = "";
    }
    function changeColor(color) { document.querySelector('.container').style.backgroundColor = color; }
    function formatDate(input, nextFieldId) {
        let value = input.value; let raw = value.replace(/\D/g, '');
        let today = new Date(); let defaultMonth = String(today.getMonth() + 1).padStart(2, '0');
        let defaultYear = String(today.getFullYear());
        if (raw.length === 2 && value.length <= 2) { input.value = raw + "-" + defaultMonth + "-" + defaultYear; return; }
        if (value.length > 10) { input.value = value.slice(0, 10); return; }
        if (raw.length > 2) {
             let d = raw.slice(0, 2); let m = raw.slice(2, 4); let y = raw.slice(4, 8);
             let formatted = d; if (m) formatted += "-" + m; if (y) formatted += "-" + y; input.value = formatted;
        }
    }
    function parseCustomDate(dateStr) {
        if (!dateStr || dateStr.length < 8) return null;
        let parts = dateStr.split('-');
        if (parts.length !== 3) return null;
        return `${parts[2]}-${parts[1]}-${parts[0]}`;
    }
    function reverseParseDate(isoStr) {
        if(!isoStr) return "";
        let parts = isoStr.split('-'); return `${parts[2]}-${parts[1]}-${parts[0]}`;
    }
    function get(id) { return document.getElementById(id); }
    function formatDateDisplay(dateString) {
        if(!dateString) return "";
        let options = { year: 'numeric', month: 'short', day: 'numeric' };
        return new Date(dateString).toLocaleDateString(undefined, options);
    }
    function showToast(message) {
        let x = document.getElementById("toast"); x.textContent = message; x.className = "show";
        setTimeout(function(){ x.className = x.className.replace("show", ""); }, 3000);
    }
</script>
</body>
</html>
